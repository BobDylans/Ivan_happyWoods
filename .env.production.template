# Production Environment Configuration Template
# Copy to .env.production and fill in all required values before deployment

# ============================================================
# CRITICAL: Required settings - DO NOT leave empty in production
# ============================================================

# Database Configuration
POSTGRES_PASSWORD=SET_SECURE_PASSWORD_HERE_MIN_16_CHARS
POSTGRES_DB=voice_agent
POSTGRES_USER=agent_user
POSTGRES_PORT=5432

# LLM Configuration
LLM_API_KEY=SET_YOUR_OPENAI_API_KEY_HERE
LLM_PROVIDER=openai
LLM_BASE_URL=https://api.openai.com/v1
LLM_DEFAULT_MODEL=gpt-4

# API Keys (comma-separated list of valid API keys)
API_KEYS=key1_set_here,key2_set_here

# Tools Configuration
TAVILY_API_KEY=SET_YOUR_TAVILY_API_KEY_HERE

# Grafana Admin
GRAFANA_ADMIN_PASSWORD=SET_SECURE_PASSWORD_HERE_MIN_16_CHARS

# ============================================================
# Optional: Application Configuration
# ============================================================

# Environment
ENVIRONMENT=production
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Qdrant Vector Database
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_REST_PORT=6333
QDRANT_GRPC_PORT=6334

# Jaeger Distributed Tracing (P0 Phase)
JAEGER_HOST=jaeger
JAEGER_PORT=6831
JAEGER_UI_PORT=16686
JAEGER_AGENT_ZIPKIN_THRIFT_PORT=6831
SERVICE_NAME=voice-agent-api
TRACE_SAMPLE_RATE=0.5  # 50% sampling in production (reduce for high-traffic)

# Prometheus Metrics
PROMETHEUS_PORT=9090

# Grafana Visualization
GRAFANA_ADMIN_USER=admin
GRAFANA_PORT=3000

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================
# Security Recommendations
# ============================================================
# 1. Use strong passwords (minimum 16 characters with mixed case, numbers, symbols)
# 2. Store secrets in environment variables, not in .env file in production
# 3. Use a secrets management system (Kubernetes Secrets, AWS Secrets Manager, HashiCorp Vault)
# 4. Rotate API keys regularly
# 5. Enable HTTPS/TLS for all communications
# 6. Use strong CORS origins - never use '*' in production
# 7. Enable rate limiting
# 8. Monitor and log all access
# 9. Implement WAF (Web Application Firewall)
# 10. Use container security scanning
