# =============================================================================
# CORE LLM CONFIGURATION (Required)
# =============================================================================

# OpenAI Configuration
VOICE_AGENT_LLM__API_KEY=sk-M9DIQm5fQ66GgUtCXe9jw1MjjsPlNgSXF38gHQStYkIxan30
VOICE_AGENT_LLM__BASE_URL=https://api.openai-proxy.org
VOICE_AGENT_LLM__PROVIDER=openai

# Alternative: Anthropic Configuration
# VOICE_AGENT_LLM__API_KEY=your-anthropic-api-key-here
# VOICE_AGENT_LLM__BASE_URL=https://api.anthropic.com
# VOICE_AGENT_LLM__PROVIDER=anthropic

# Alternative: Azure OpenAI Configuration
# VOICE_AGENT_LLM__API_KEY=your-azure-api-key-here
# VOICE_AGENT_LLM__BASE_URL=https://your-resource.openai.azure.com
# VOICE_AGENT_LLM__PROVIDER=azure

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================

VOICE_AGENT_API__HOST=0.0.0.0
VOICE_AGENT_API__PORT=8000
VOICE_AGENT_API__WORKERS=1

# =============================================================================
# AUTHENTICATION & SECURITY (Phase 2A - NEW)
# =============================================================================

# API Key Authentication
# Set API_KEY_ENABLED=false to disable authentication (development only)
API_KEY_ENABLED=true

# Comma-separated list of valid API keys for client authentication
# Generate strong keys: openssl rand -hex 32
API_KEYS=dev-test-key-123,your-production-key-here

# Example strong keys:
# API_KEYS=a1b2c3d4e5f6g7h8,x9y8z7w6v5u4t3s2

# =============================================================================
# TOOL CONFIGURATIONS (Optional)
# =============================================================================

# Search Tool (e.g., Serper, Tavily, or Bing)
# VOICE_AGENT_TOOLS__SEARCH_TOOL__API_KEY=your-search-api-key
# VOICE_AGENT_TOOLS__SEARCH_TOOL__BASE_URL=https://google.serper.dev

# Image Generation Tool (if different from main LLM)
# VOICE_AGENT_TOOLS__IMAGE_GENERATOR__API_KEY=your-image-api-key
# VOICE_AGENT_TOOLS__IMAGE_GENERATOR__BASE_URL=https://api.openai.com/v1

# Document Analysis Tool
# VOICE_AGENT_TOOLS__DOCUMENT_ANALYZER__API_KEY=your-doc-analysis-key

# =============================================================================
# SESSION STORAGE CONFIGURATION
# =============================================================================

# Memory storage (default, no setup needed)
VOICE_AGENT_SESSION__STORAGE_TYPE=memory

# Redis storage (uncomment and configure for production)
# VOICE_AGENT_SESSION__STORAGE_TYPE=redis
# VOICE_AGENT_SESSION__REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API Keys for client authentication (comma-separated)
VOICE_AGENT_SECURITY__API_KEYS=dev-test-key-123,your-production-key

# CORS Configuration
VOICE_AGENT_SECURITY__CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# LOGGING AND DEBUGGING
# =============================================================================

VOICE_AGENT_LOG_LEVEL=INFO
VOICE_AGENT_DEBUG=false
VOICE_AGENT_ENVIRONMENT=development

# =============================================================================
# MODEL SELECTION (Optional Overrides)
# =============================================================================

# Override default models for different scenarios
# VOICE_AGENT_LLM__MODELS__DEFAULT=gpt-4
# VOICE_AGENT_LLM__MODELS__FAST=gpt-3.5-turbo
# VOICE_AGENT_LLM__MODELS__CREATIVE=gpt-4

# =============================================================================
# SPEECH CONFIGURATION (Phase 2B - Voice Pipeline)
# =============================================================================

# iFlytek Voice Services (科大讯飞)
# STT (Speech-to-Text) and TTS (Text-to-Speech) share same credentials
IFLYTEK_APPID=your-iflytek-appid-here
IFLYTEK_APIKEY=your-iflytek-apikey-here
IFLYTEK_APISECRET=your-iflytek-apisecret-here

# Optional: Separate TTS credentials (if different from STT)
# IFLYTEK_TTS_APPID=your-tts-specific-appid
# IFLYTEK_TTS_APIKEY=your-tts-specific-apikey
# IFLYTEK_TTS_APISECRET=your-tts-specific-apisecret

# TTS Voice Configuration
# VOICE_AGENT_SPEECH__TTS__VOICE=x4_lingxiaoxuan_oral
# VOICE_AGENT_SPEECH__TTS__SPEED=50  # 0-100
# VOICE_AGENT_SPEECH__TTS__FORMAT=mp3

# STT Language Configuration
# VOICE_AGENT_SPEECH__STT__LANGUAGE=mul_cn  # 中英文混合
# VOICE_AGENT_SPEECH__STT__DOMAIN=slm  # slm=超大模型, iat=通用识别
# VOICE_AGENT_SPEECH__STT__ACCENT=mandarin  # 普通话

# Alternative: OpenAI Whisper (if not using iFlytek)
# VOICE_AGENT_SPEECH__STT__PROVIDER=openai
# VOICE_AGENT_SPEECH__STT__MODEL=whisper-1
# VOICE_AGENT_SPEECH__STT__LANGUAGE=en-US

# =============================================================================
# PERFORMANCE TUNING (Optional)
# =============================================================================

# Session Configuration
# VOICE_AGENT_SESSION__TIMEOUT_MINUTES=30
# VOICE_AGENT_SESSION__MAX_HISTORY=50

# LLM Configuration
# VOICE_AGENT_LLM__TIMEOUT=30
# VOICE_AGENT_LLM__MAX_TOKENS=2048
# VOICE_AGENT_LLM__TEMPERATURE=0.7

# Tool Timeouts
# VOICE_AGENT_TOOLS__SEARCH_TOOL__TIMEOUT=10
# VOICE_AGENT_TOOLS__IMAGE_GENERATOR__TIMEOUT=60

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable auto-reload (development only)
# VOICE_AGENT_API__RELOAD=true

# Mock external services for testing
# VOICE_AGENT_TESTING__MOCK_EXTERNAL_SERVICES=false

