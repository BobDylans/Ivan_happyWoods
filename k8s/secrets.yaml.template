apiVersion: v1
kind: Secret
metadata:
  name: voice-agent-secrets
  namespace: voice-agent
type: Opaque
stringData:
  # PostgreSQL Configuration
  POSTGRES_PASSWORD: "SET_SECURE_PASSWORD_HERE"

  # LLM Configuration
  LLM_API_KEY: "SET_YOUR_OPENAI_API_KEY_HERE"

  # Tools Configuration
  TAVILY_API_KEY: "SET_YOUR_TAVILY_API_KEY_HERE"

  # API Keys (comma-separated)
  API_KEYS: "key1,key2,key3"

  # Grafana
  GRAFANA_ADMIN_PASSWORD: "SET_SECURE_PASSWORD_HERE"
